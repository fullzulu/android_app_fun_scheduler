<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add task"
            android:id="@+id/addTaskButton"
            android:focusableInTouchMode="false"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current tasks"
            android:id="@+id/currentTasksButton"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="107dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/aboutButton" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="270dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="History"
            android:id="@+id/historyButton"
            android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
</RelativeLayout>